---
// Datos de experiencia profesional
const experiences = [
    {
        title: "Desarrollador Web Freelance",
        company: "Proyectos Independientes",
        period: "2024 - Presente",
        description:
            "Desarrollo de soluciones web personalizadas para pequeños negocios, incluyendo sistemas de catálogo con integración a WhatsApp y sitios e-commerce.",
        technologies: ["React", "Astro", "Tailwind CSS", "PHP", "Vercel"],
        type: "freelance",
    },
    {
        title: "Egresado en Analista programador computacional",
        company: "Duoc UC, Viña Del Mar",
        period: "2025",
        description:
            "Finalización de estudios en Analista programador computacional, con enfoque en tecnologías modernas y mejores prácticas de la industria.",
        technologies: [
            "JavaScript",
            "React",
            "Node.js",
            "Git",
            "Aplicaciones responsivas",
        ],
        type: "education",
    },
];
---

<section id="experience" class="experience-section">
    <div class="container">
        <h2 class="section-title">
            Experiencia <span class="gradient-text">Profesional</span>
        </h2>

        <div class="timeline">
            {
                experiences.map((exp, index) => (
                    <div class="timeline-item" data-index={index}>
                        <div class="timeline-marker">
                            <div class="timeline-dot" />
                            {index < experiences.length - 1 && (
                                <div class="timeline-line" />
                            )}
                        </div>

                        <div class="timeline-content">
                            <div class="timeline-header">
                                <h3>{exp.title}</h3>
                                <span class="period">{exp.period}</span>
                            </div>

                            <h4 class="company">
                                <i
                                    class={
                                        exp.type === "freelance"
                                            ? "fas fa-briefcase"
                                            : "fas fa-graduation-cap"
                                    }
                                />
                                {exp.company}
                            </h4>

                            <p class="description">{exp.description}</p>

                            <div class="tech-tags">
                                {exp.technologies.map((tech) => (
                                    <span class="tech-tag">{tech}</span>
                                ))}
                            </div>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>

<style>
    .experience-section {
        padding: 100px 0;
        background: rgba(10, 10, 10, 0.8);
        position: relative;
    }

    .section-title {
        font-size: 2.5rem;
        text-align: center;
        margin-bottom: 60px;
        text-transform: uppercase;
        letter-spacing: 4px;
    }

    .timeline {
        max-width: 900px;
        margin: 0 auto;
        position: relative;
    }

    .timeline-item {
        display: grid;
        grid-template-columns: 60px 1fr;
        gap: 30px;
        margin-bottom: 50px;
        opacity: 0;
        transform: translateY(30px);
    }

    .timeline-marker {
        position: relative;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .timeline-dot {
        width: 20px;
        height: 20px;
        border-radius: 50%;
        background: var(--accent);
        border: 3px solid var(--bg-color);
        box-shadow: 0 0 20px var(--accent);
        position: relative;
        z-index: 2;
    }

    .timeline-line {
        width: 2px;
        flex: 1;
        background: linear-gradient(180deg, var(--accent), var(--secondary));
        margin-top: 10px;
        opacity: 0.3;
    }

    .timeline-content {
        background: rgba(20, 20, 20, 0.6);
        border: 1px solid rgba(0, 243, 255, 0.2);
        padding: 25px;
        border-radius: 8px;
        position: relative;
        transition: all 0.3s ease;
    }

    .timeline-content::before {
        content: "";
        position: absolute;
        left: -10px;
        top: 20px;
        width: 0;
        height: 0;
        border-top: 10px solid transparent;
        border-bottom: 10px solid transparent;
        border-right: 10px solid rgba(0, 243, 255, 0.2);
    }

    .timeline-content:hover {
        border-color: var(--accent);
        box-shadow: 0 0 30px rgba(0, 243, 255, 0.15);
        transform: translateX(5px);
    }

    .timeline-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 10px;
        flex-wrap: wrap;
        gap: 10px;
    }

    .timeline-content h3 {
        color: var(--accent);
        font-size: 1.5rem;
        margin: 0;
        font-family: var(--font-heading);
    }

    .period {
        color: var(--secondary);
        font-family: "Courier New", monospace;
        font-size: 0.9rem;
        font-weight: bold;
        padding: 4px 12px;
        background: rgba(188, 19, 254, 0.1);
        border-radius: 4px;
    }

    .company {
        color: #aaa;
        font-size: 1.1rem;
        margin: 10px 0;
        font-family: var(--font-body);
        font-weight: 400;
    }

    .company i {
        color: var(--accent);
        margin-right: 8px;
    }

    .description {
        color: #ccc;
        line-height: 1.6;
        margin: 15px 0;
    }

    .tech-tags {
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
        margin-top: 15px;
    }

    .tech-tag {
        background: rgba(0, 243, 255, 0.1);
        color: var(--accent);
        padding: 4px 10px;
        border-radius: 12px;
        font-size: 0.8rem;
        font-family: var(--font-heading);
        border: 1px solid rgba(0, 243, 255, 0.3);
    }

    @media (max-width: 768px) {
        .timeline {
            padding-left: 0;
        }

        .timeline-item {
            grid-template-columns: 40px 1fr;
            gap: 15px;
        }

        .timeline-content h3 {
            font-size: 1.2rem;
        }

        .timeline-header {
            flex-direction: column;
        }
    }
</style>

<script>
    import { gsap } from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";

    gsap.registerPlugin(ScrollTrigger);

    // Animar items del timeline cuando aparecen en viewport
    const timelineItems = document.querySelectorAll(".timeline-item");

    timelineItems.forEach((item, index) => {
        gsap.to(item, {
            scrollTrigger: {
                trigger: item,
                start: "top 85%",
            },
            opacity: 1,
            y: 0,
            duration: 0.6,
            delay: index * 0.1,
            ease: "power2.out",
        });
    });
</script>
