---
const projects = [
    { 
        title: "Tienda de catalogo y pedidos por WhatsApp", 
        desc: "Plataforma de ventas con motor de recomendación inteligente y análisis predictivo.", 
        tech: ["React", "Python", "AWS", "Machine Learning"],
        codeUrl: "https://github.com/ArielCamposs/Pagina-Web-Catalogo-Productos", // <-- Nueva URL de código
        demoUrl: "https://pagina-web-catalogo.vercel.app/", // <-- Nueva URL de demo
        images: [ // <-- Nuevas imágenes para el carrusel
                "/images/musaplast1.webp",
                "/images/musaplast2.webp",
                "/images/musaplast3.webp"
        ]
    },
    { 
        title: "Crypto Dashboard", 
        desc: "Visualización de datos de criptomonedas en tiempo real con gráficos interactivos y alertas personalizadas.", 
        tech: ["Vue", "D3.js", "Socket.io", "Node.js"],
        codeUrl: "https://github.com/tu-usuario/crypto-dashboard",
        demoUrl: "https://crypto.tu-dominio.com",
        images: [
            "/project-images/crypto-1.webp",
            "/project-images/crypto-2.webp",
            "/project-images/crypto-3.webp"
        ]
    },
    { 
        title: "Neural Network Viz", 
        desc: "Herramienta educativa interactiva para visualizar y experimentar con redes neuronales convolucionales.", 
        tech: ["Three.js", "TypeScript", "WebGL", "TensorFlow.js"],
        codeUrl: "https://github.com/tu-usuario/nn-viz",
        demoUrl: "https://nn-viz.tu-dominio.com",
        images: [
            "/project-images/neural-1.webp",
            "/project-images/neural-2.webp",
            "/project-images/neural-3.webp"
        ]
    }
];
---

<section id="projects" class="projects-section">
    <div class="container">
        <h2 class="section-title">Misiones <span class="gradient-text">Completadas</span></h2>
        
        <div class="grid">
            {projects.map((project, index) => (
                <article class="card project-card" data-project-index={index}> {/* Añadimos data-project-index */}
                    <div class="card-content">
                        <h3>{project.title}</h3>
                        <p>{project.desc}</p>
                        <div class="tags">
                            {project.tech.map(t => <span>{t}</span>)}
                        </div>
                        <div class="card-actions"> {/* Contenedor para los botones */}
                            <a href={project.codeUrl} target="_blank" rel="noopener noreferrer" class="card-link">Ver código</a>
                            {project.demoUrl && (
                                <a href={project.demoUrl} target="_blank" rel="noopener noreferrer" class="card-link primary-link">Ir a página</a>
                            )}
                        </div>
                        <button class="view-details-btn">Ver Detalles</button> {/* Botón para abrir modal */}
                    </div>
                </article>
            ))}
        </div>
    </div>
</section>

<div id="project-modal" class="modal">
    <div class="modal-content">
        <span class="close-button">&times;</span>
        <h3 id="modal-title"></h3>
        <p id="modal-description"></p>
        <div class="modal-tech-tags"></div>

        <div class="carousel-container">
            <div class="carousel-track" id="modal-carousel-track">
                {/* Las imágenes se cargarán aquí dinámicamente */}
            </div>
            <button class="carousel-button prev" id="carousel-prev">&#10094;</button>
            <button class="carousel-button next" id="carousel-next">&#10095;</button>
        </div>
        
        <div class="modal-actions">
            <a id="modal-code-link" href="#" target="_blank" rel="noopener noreferrer" class="btn btn-outline">Ver Código</a>
            <a id="modal-demo-link" href="#" target="_blank" rel="noopener noreferrer" class="btn btn-primary">Ir a Página</a>
        </div>
    </div>
</div>

<style>
    /* ... (Mantener CSS existente para .projects-section, .section-title, .grid, .card, etc.) ... */

    /* Estilos adicionales para los botones de acción dentro de la tarjeta */
    .card-actions {
        display: flex;
        gap: 15px;
        margin-top: 20px;
        flex-wrap: wrap; /* Para pantallas pequeñas */
    }

    .card-link {
        display: inline-block; /* Para que gap funcione */
        color: var(--secondary);
        text-decoration: none;
        font-weight: bold;
        padding: 5px 0; /* Ajuste para que no sea un botón completo */
        border-bottom: 1px solid transparent;
        transition: border-color 0.3s;
    }

    .card-link:hover {
        border-color: var(--secondary);
    }
    
    .card-link.primary-link {
        color: var(--accent);
    }
    
    .card-link.primary-link:hover {
        border-color: var(--accent);
    }

    .view-details-btn {
        background: transparent;
        border: 1px solid rgba(0, 243, 255, 0.3);
        color: var(--accent);
        padding: 8px 15px;
        margin-top: 15px;
        cursor: pointer;
        font-family: var(--font-heading);
        font-size: 0.85rem;
        transition: 0.3s;
        display: block; /* Para que ocupe todo el ancho */
        width: 100%;
    }

    .view-details-btn:hover {
        background: rgba(0, 243, 255, 0.1);
        box-shadow: 0 0 10px var(--accent);
    }

    /* --- Estilos del Modal --- */
    .modal {
        display: none; /* Oculto por defecto */
        position: fixed;
        z-index: 1000;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgba(0,0,0,0.8); /* Fondo oscuro semitransparente */
        backdrop-filter: blur(8px); /* Efecto blur */
        animation: fadeIn 0.3s forwards;
    }

    .modal-content {
        background-color: rgba(15, 15, 15, 0.95);
        margin: 5% auto; /* 5% desde arriba y centrado */
        padding: 30px;
        border: 1px solid var(--accent);
        width: 90%;
        max-width: 900px;
        position: relative;
        box-shadow: 0 0 50px rgba(0, 243, 255, 0.2);
        animation: slideIn 0.4s ease-out forwards;
        border-radius: 5px;
    }

    .close-button {
        color: var(--secondary);
        font-size: 28px;
        font-weight: bold;
        position: absolute;
        top: 10px;
        right: 20px;
        cursor: pointer;
        transition: 0.3s;
    }

    .close-button:hover,
    .close-button:focus {
        color: #fff;
    }

    #modal-title {
        font-size: 2.2rem;
        color: var(--accent);
        margin-bottom: 15px;
    }

    #modal-description {
        font-size: 1rem;
        color: #ccc;
        margin-bottom: 20px;
    }

    .modal-tech-tags span {
        display: inline-block;
        background: rgba(188, 19, 254, 0.1);
        color: var(--secondary);
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 0.8rem;
        margin-right: 8px;
        margin-bottom: 8px;
        font-family: var(--font-heading);
    }

    .carousel-container {
        position: relative;
        width: 100%;
        overflow: hidden;
        margin-top: 30px;
        border: 1px solid #333;
        background: #000;
        height: 450px; /* Altura fija para el carrusel */
    }

    .carousel-track {
        display: flex;
        transition: transform 0.5s ease-in-out;
        height: 100%;
    }

    .carousel-track img {
        width: 100%;
        height: 100%;
        object-fit: contain; /* Ajusta la imagen dentro del contenedor */
        flex-shrink: 0;
        background-color: #000; /* Fondo negro para las imágenes */
    }

    .carousel-button {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        background-color: rgba(0,0,0,0.5);
        color: white;
        border: none;
        padding: 10px 15px;
        cursor: pointer;
        font-size: 1.5rem;
        user-select: none;
        transition: background-color 0.3s;
    }

    .carousel-button:hover {
        background-color: rgba(0,0,0,0.8);
    }

    .carousel-button.prev { left: 0; border-radius: 0 5px 5px 0; }
    .carousel-button.next { right: 0; border-radius: 5px 0 0 5px; }

    .modal-actions {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-top: 30px;
        flex-wrap: wrap;
    }

    /* Reutilizamos los estilos de los botones del Hero para el modal */
    .modal-actions .btn {
        padding: 10px 25px;
    }

    /* Animaciones del modal */
    @keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
    }

    @keyframes slideIn {
        from { transform: translateY(-50px); opacity: 0; }
        to { transform: translateY(0); opacity: 1; }
    }

    @media (max-width: 768px) {
        .modal-content {
            margin: 10% auto;
            padding: 20px;
        }
        #modal-title { font-size: 1.8rem; }
        .carousel-container { height: 300px; }
    }
</style>

<script>
    import { gsap } from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";

    gsap.registerPlugin(ScrollTrigger);

    // Animación al hacer scroll (ScrollTrigger)
    gsap.utils.toArray('.project-card').forEach((card: any, i) => {
        gsap.from(card, {
            scrollTrigger: {
                trigger: card,
                start: "top 85%",
            },
            y: 50,
            opacity: 0,
            duration: 0.6,
            delay: i * 0.1
        });
    });

    // --- Lógica del Modal y Carrusel ---
    const projectsData = [
        // Asegúrate de que esta data coincide con la de arriba en el bloque Astro
        { 
            title: "Tienda Catalogo pedidos por WhatsApp", 
            desc: "Plataforma de ventas con motor de recomendación inteligente y análisis predictivo.", 
            tech: ["React", "Python", "AWS", "Machine Learning"],
            codeUrl: "https://github.com/ArielCamposs/Pagina-Web-Catalogo-Productos",
            demoUrl: "https://pagina-web-catalogo.vercel.app/",
            images: [
                "/images/musaplast1.webp",
                "/images/musaplast2.webp",
                "/images/musaplast3.webp"
            ]
        },
        { 
            title: "Crypto Dashboard", 
            desc: "Visualización de datos de criptomonedas en tiempo real con gráficos interactivos y alertas personalizadas.", 
            tech: ["Vue", "D3.js", "Socket.io", "Node.js"],
            codeUrl: "https://github.com/tu-usuario/crypto-dashboard",
            demoUrl: "https://crypto.tu-dominio.com",
            images: [
                "/project-images/crypto-1.webp",
                "/project-images/crypto-2.webp",
                "/project-images/crypto-3.webp"
            ]
        },
        { 
            title: "Neural Network Viz", 
            desc: "Herramienta educativa interactiva para visualizar y experimentar con redes neuronales convolucionales.", 
            tech: ["Three.js", "TypeScript", "WebGL", "TensorFlow.js"],
            codeUrl: "https://github.com/tu-usuario/nn-viz",
            demoUrl: "https://nn-viz.tu-dominio.com",
            images: [
                "/project-images/neural-1.webp",
                "/project-images/neural-2.webp",
                "/project-images/neural-3.webp"
            ]
        }
    ];

    const modal = document.getElementById('project-modal');
    const closeButton = document.querySelector('.close-button');
    const projectCards = document.querySelectorAll('.project-card');

    const modalTitle = document.getElementById('modal-title');
    const modalDescription = document.getElementById('modal-description');
    const modalTechTags = document.querySelector('.modal-tech-tags');
    const modalCodeLink = document.getElementById('modal-code-link');
    const modalDemoLink = document.getElementById('modal-demo-link');
    const modalCarouselTrack = document.getElementById('modal-carousel-track');
    const carouselPrevBtn = document.getElementById('carousel-prev');
    const carouselNextBtn = document.getElementById('carousel-next');

    let currentProjectImages = [];
    let currentImageIndex = 0;

    function openModal(projectIndex) {
        const project = projectsData[projectIndex];
        
        modalTitle.textContent = project.title;
        modalDescription.textContent = project.desc;
        
        modalTechTags.innerHTML = '';
        project.tech.forEach(tech => {
            const span = document.createElement('span');
            span.textContent = tech;
            modalTechTags.appendChild(span);
        });

        modalCodeLink.href = project.codeUrl;
        if (project.demoUrl) {
            modalDemoLink.href = project.demoUrl;
            modalDemoLink.style.display = 'inline-block';
        } else {
            modalDemoLink.style.display = 'none'; // Ocultar si no hay demo
        }

        // Cargar imágenes del carrusel
        currentProjectImages = project.images;
        currentImageIndex = 0;
        renderCarouselImages();
        
        modal.style.display = 'block';
        document.body.style.overflow = 'hidden'; // Evita scroll de fondo
    }

    function renderCarouselImages() {
        modalCarouselTrack.innerHTML = '';
        currentProjectImages.forEach(imageUrl => {
            const img = document.createElement('img');
            img.src = imageUrl;
            img.alt = "Captura de pantalla del proyecto";
            modalCarouselTrack.appendChild(img);
        });
        updateCarouselPosition();
    }

    function updateCarouselPosition() {
        if (currentProjectImages.length > 0) {
            const imageWidth = modalCarouselTrack.children[0].clientWidth;
            modalCarouselTrack.style.transform = `translateX(-${currentImageIndex * imageWidth}px)`;
        }
    }

    function nextImage() {
        currentImageIndex = (currentImageIndex + 1) % currentProjectImages.length;
        updateCarouselPosition();
    }

    function prevImage() {
        currentImageIndex = (currentImageIndex - 1 + currentProjectImages.length) % currentProjectImages.length;
        updateCarouselPosition();
    }

    projectCards.forEach(card => {
        card.querySelector('.view-details-btn').addEventListener('click', () => {
            const index = card.dataset.projectIndex;
            openModal(parseInt(index));
        });
    });

    closeButton.addEventListener('click', () => {
        modal.style.display = 'none';
        document.body.style.overflow = 'auto'; // Restaurar scroll
    });

    window.addEventListener('click', (event) => {
        if (event.target == modal) {
            modal.style.display = 'none';
            document.body.style.overflow = 'auto';
        }
    });

    carouselNextBtn.addEventListener('click', nextImage);
    carouselPrevBtn.addEventListener('click', prevImage);

    // Ajustar posición del carrusel en redimensionamiento para evitar roturas
    window.addEventListener('resize', updateCarouselPosition);

</script>