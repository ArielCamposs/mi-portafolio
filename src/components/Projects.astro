---
const projects = [
    {
        title: "Tienda de Catálogo y Pedidos por WhatsApp",
        desc: "Sistema de catálogo web para pequeños negocios con integración directa a WhatsApp. Permite a los clientes explorar productos y realizar pedidos de forma rápida y sencilla.",
        tech: ["React", "Tailwind CSS", "Vercel"],
        codeUrl:
            "https://github.com/ArielCamposs/Pagina-Web-Catalogo-Productos",
        demoUrl: "https://pagina-web-catalogo.vercel.app/",
        images: [
            "/images/musaplast1.webp",
            "/images/musaplast2.webp",
            "/images/musaplast3.webp",
        ],
    },
];
---

<section id="projects" class="projects-section">
    <div class="container">
        <h2 class="section-title">
            Misiones <span class="gradient-text">Completadas</span>
        </h2>

        <div class="grid">
            {
                projects.map((project, index) => (
                    <article
                        class="card project-card"
                        data-project-index={index}
                    >
                        <div class="card-content">
                            <h3>{project.title}</h3>
                            <p>{project.desc}</p>
                            <div class="tags">
                                {project.tech.map((t) => (
                                    <span>{t}</span>
                                ))}
                            </div>
                            <div class="card-actions">
                                <a
                                    href={project.codeUrl}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="card-link"
                                >
                                    Ver código
                                </a>
                                {project.demoUrl && (
                                    <a
                                        href={project.demoUrl}
                                        target="_blank"
                                        rel="noopener noreferrer"
                                        class="card-link primary-link"
                                    >
                                        Ir a página
                                    </a>
                                )}
                            </div>
                            <button class="view-details-btn">
                                Ver Detalles
                            </button>
                        </div>
                    </article>
                ))
            }
        </div>
    </div>
</section>

<div id="project-modal" class="modal">
    <div class="modal-content">
        <span class="close-button">&times;</span>
        <h3 id="modal-title"></h3>
        <p id="modal-description"></p>
        <div class="modal-tech-tags"></div>

        <div class="carousel-container">
            <div class="carousel-loading" id="carousel-loading">
                <div class="spinner"></div>
                <p>Cargando imágenes...</p>
            </div>
            <div class="carousel-track" id="modal-carousel-track">
                {/* Las imágenes se cargarán aquí dinámicamente */}
            </div>
            <button class="carousel-button prev" id="carousel-prev"
                >&#10094;</button
            >
            <button class="carousel-button next" id="carousel-next"
                >&#10095;</button
            >
        </div>

        <div class="modal-actions">
            <a
                id="modal-code-link"
                href="#"
                target="_blank"
                rel="noopener noreferrer"
                class="btn btn-outline">Ver Código</a
            >
            <a
                id="modal-demo-link"
                href="#"
                target="_blank"
                rel="noopener noreferrer"
                class="btn btn-primary">Ir a Página</a
            >
        </div>
    </div>
</div>

<style>
    .projects-section {
        padding: 100px 0;
        background: rgba(5, 5, 5, 0.9);
    }

    .section-title {
        font-size: 2.5rem;
        text-align: center;
        margin-bottom: 60px;
        text-transform: uppercase;
        letter-spacing: 4px;
    }

    .grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: 30px;
        max-width: 1200px;
        margin: 0 auto;
    }

    .card {
        background: rgba(20, 20, 20, 0.8);
        border: 1px solid #333;
        padding: 30px;
        transition:
            transform 0.3s ease,
            box-shadow 0.3s ease,
            border-color 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .card::before {
        content: "";
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 2px;
        background: linear-gradient(
            90deg,
            transparent,
            var(--accent),
            transparent
        );
        transition: left 0.5s ease;
    }

    .card:hover::before {
        left: 100%;
    }

    .card:hover {
        transform: translateY(-5px);
        border-color: var(--accent);
        box-shadow: 0 10px 40px rgba(0, 243, 255, 0.2);
    }

    .card-content h3 {
        color: var(--accent);
        font-size: 1.5rem;
        margin-bottom: 15px;
        font-family: var(--font-heading);
    }

    .card-content p {
        color: #bbb;
        margin-bottom: 20px;
        line-height: 1.6;
    }

    .tags {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        margin-bottom: 20px;
    }

    .tags span {
        background: rgba(188, 19, 254, 0.1);
        color: var(--secondary);
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 0.85rem;
        font-family: var(--font-heading);
    }

    .card-actions {
        display: flex;
        gap: 15px;
        margin-top: 20px;
        flex-wrap: wrap;
    }

    .card-link {
        display: inline-block;
        color: var(--secondary);
        text-decoration: none;
        font-weight: bold;
        padding: 5px 0;
        border-bottom: 1px solid transparent;
        transition: border-color 0.3s;
    }

    .card-link:hover {
        border-color: var(--secondary);
    }

    .card-link.primary-link {
        color: var(--accent);
    }

    .card-link.primary-link:hover {
        border-color: var(--accent);
    }

    .view-details-btn {
        background: transparent;
        border: 1px solid rgba(0, 243, 255, 0.3);
        color: var(--accent);
        padding: 8px 15px;
        margin-top: 15px;
        cursor: pointer;
        font-family: var(--font-heading);
        font-size: 0.85rem;
        transition: 0.3s;
        display: block;
        width: 100%;
    }

    .view-details-btn:hover {
        background: rgba(0, 243, 255, 0.1);
        box-shadow: 0 0 10px var(--accent);
    }

    /* --- Estilos del Modal --- */
    .modal {
        display: none;
        position: fixed;
        z-index: 1000;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgba(0, 0, 0, 0.8);
        backdrop-filter: blur(8px);
        animation: fadeIn 0.3s forwards;
    }

    .modal-content {
        background-color: rgba(15, 15, 15, 0.95);
        margin: 5% auto;
        padding: 30px;
        border: 1px solid var(--accent);
        width: 90%;
        max-width: 900px;
        position: relative;
        box-shadow: 0 0 50px rgba(0, 243, 255, 0.2);
        animation: slideIn 0.4s ease-out forwards;
        border-radius: 5px;
    }

    .close-button {
        color: var(--secondary);
        font-size: 28px;
        font-weight: bold;
        position: absolute;
        top: 10px;
        right: 20px;
        cursor: pointer;
        transition: 0.3s;
    }

    .close-button:hover,
    .close-button:focus {
        color: #fff;
    }

    #modal-title {
        font-size: 2.2rem;
        color: var(--accent);
        margin-bottom: 15px;
    }

    #modal-description {
        font-size: 1rem;
        color: #ccc;
        margin-bottom: 20px;
    }

    .modal-tech-tags span {
        display: inline-block;
        background: rgba(188, 19, 254, 0.1);
        color: var(--secondary);
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 0.8rem;
        margin-right: 8px;
        margin-bottom: 8px;
        font-family: var(--font-heading);
    }

    .carousel-container {
        position: relative;
        width: 100%;
        overflow: hidden;
        margin-top: 30px;
        border: 1px solid #333;
        background: #000;
        height: 450px;
    }

    .carousel-track {
        display: flex;
        transition: transform 0.5s ease-in-out;
        height: 100%;
    }

    .carousel-track img {
        width: 100%;
        height: 100%;
        object-fit: contain;
        flex-shrink: 0;
        background-color: #000;
    }

    .carousel-button {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        background-color: rgba(0, 0, 0, 0.5);
        color: white;
        border: none;
        padding: 10px 15px;
        cursor: pointer;
        font-size: 1.5rem;
        user-select: none;
        transition: background-color 0.3s;
    }

    .carousel-button:hover {
        background-color: rgba(0, 0, 0, 0.8);
    }

    .carousel-button.prev {
        left: 0;
        border-radius: 0 5px 5px 0;
    }
    .carousel-button.next {
        right: 0;
        border-radius: 5px 0 0 5px;
    }

    /* Loading spinner */
    .carousel-loading {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background: rgba(0, 0, 0, 0.9);
        z-index: 10;
    }

    .carousel-loading.hidden {
        display: none;
    }

    .spinner {
        width: 50px;
        height: 50px;
        border: 4px solid rgba(0, 243, 255, 0.1);
        border-top: 4px solid var(--accent);
        border-radius: 50%;
        animation: spin 1s linear infinite;
    }

    @keyframes spin {
        0% {
            transform: rotate(0deg);
        }
        100% {
            transform: rotate(360deg);
        }
    }

    .carousel-loading p {
        color: var(--accent);
        margin-top: 20px;
        font-family: var(--font-heading);
        font-size: 0.9rem;
    }

    .modal-actions {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-top: 30px;
        flex-wrap: wrap;
    }

    .modal-actions .btn {
        padding: 10px 25px;
    }

    .btn {
        padding: 12px 30px;
        font-family: var(--font-heading);
        text-decoration: none;
        text-transform: uppercase;
        font-weight: bold;
        clip-path: polygon(10% 0, 100% 0, 100% 70%, 90% 100%, 0 100%, 0 30%);
        transition:
            transform 0.3s ease,
            box-shadow 0.3s ease;
    }

    .btn-primary {
        background: var(--accent);
        color: #000;
    }

    .btn-primary:hover {
        background: #fff;
        box-shadow: 0 0 20px var(--accent);
    }

    .btn-outline {
        background: transparent;
        border: 1px solid var(--secondary);
        color: var(--secondary);
    }

    .btn-outline:hover {
        background: rgba(188, 19, 254, 0.1);
        box-shadow: 0 0 20px var(--secondary);
    }

    /* Animaciones del modal */
    @keyframes fadeIn {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }

    @keyframes slideIn {
        from {
            transform: translateY(-50px);
            opacity: 0;
        }
        to {
            transform: translateY(0);
            opacity: 1;
        }
    }

    @media (max-width: 768px) {
        .grid {
            grid-template-columns: 1fr;
        }
        .modal-content {
            margin: 10% auto;
            padding: 20px;
        }
        #modal-title {
            font-size: 1.8rem;
        }
        .carousel-container {
            height: 300px;
        }
    }
</style>

<script>
    import { gsap } from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";

    gsap.registerPlugin(ScrollTrigger);

    // Animación al hacer scroll (ScrollTrigger)
    gsap.utils.toArray(".project-card").forEach((card: any, i) => {
        gsap.from(card, {
            scrollTrigger: {
                trigger: card,
                start: "top 85%",
            },
            y: 50,
            opacity: 0,
            duration: 0.6,
            delay: i * 0.1,
        });
    });

    // --- Lógica del Modal y Carrusel ---
    const projectsData = [
        {
            title: "Tienda de Catálogo y Pedidos por WhatsApp",
            desc: "Sistema de catálogo web para pequeños negocios con integración directa a WhatsApp. Permite a los clientes explorar productos y realizar pedidos de forma rápida y sencilla.",
            tech: ["React", "Tailwind CSS", "Vercel"],
            codeUrl:
                "https://github.com/ArielCamposs/Pagina-Web-Catalogo-Productos",
            demoUrl: "https://pagina-web-catalogo.vercel.app/",
            images: [
                "/images/musaplast1.webp",
                "/images/musaplast2.webp",
                "/images/musaplast3.webp",
            ],
        },
    ];

    const modal = document.getElementById("project-modal");
    const closeButton = document.querySelector(".close-button");
    const projectCards = document.querySelectorAll(".project-card");

    const modalTitle = document.getElementById("modal-title");
    const modalDescription = document.getElementById("modal-description");
    const modalTechTags = document.querySelector(".modal-tech-tags");
    const modalCodeLink = document.getElementById(
        "modal-code-link",
    ) as HTMLAnchorElement;
    const modalDemoLink = document.getElementById(
        "modal-demo-link",
    ) as HTMLAnchorElement;
    const modalCarouselTrack = document.getElementById("modal-carousel-track");
    const carouselPrevBtn = document.getElementById("carousel-prev");
    const carouselNextBtn = document.getElementById("carousel-next");

    let currentProjectImages: string[] = [];
    let currentImageIndex = 0;

    function openModal(projectIndex: number) {
        const project = projectsData[projectIndex];

        if (modalTitle) modalTitle.textContent = project.title;
        if (modalDescription) modalDescription.textContent = project.desc;

        if (modalTechTags) {
            modalTechTags.innerHTML = "";
            project.tech.forEach((tech) => {
                const span = document.createElement("span");
                span.textContent = tech;
                modalTechTags.appendChild(span);
            });
        }

        if (modalCodeLink) modalCodeLink.href = project.codeUrl;
        if (project.demoUrl && modalDemoLink) {
            modalDemoLink.href = project.demoUrl;
            modalDemoLink.style.display = "inline-block";
        } else if (modalDemoLink) {
            modalDemoLink.style.display = "none";
        }

        // Cargar imágenes del carrusel
        currentProjectImages = project.images;
        currentImageIndex = 0;
        renderCarouselImages();

        if (modal) modal.style.display = "block";
        document.body.style.overflow = "hidden";
    }

    function renderCarouselImages() {
        if (modalCarouselTrack) {
            const loadingElement = document.getElementById("carousel-loading");

            // Mostrar loading
            if (loadingElement) {
                loadingElement.classList.remove("hidden");
            }

            modalCarouselTrack.innerHTML = "";
            let imagesLoaded = 0;
            const totalImages = currentProjectImages.length;

            currentProjectImages.forEach((imageUrl) => {
                const img = document.createElement("img");
                img.src = imageUrl;
                img.alt = "Captura de pantalla del proyecto";
                img.loading = "lazy"; // Lazy loading para mejor performance

                // Ocultar loading cuando todas las imágenes se carguen
                img.onload = () => {
                    imagesLoaded++;
                    if (imagesLoaded === totalImages && loadingElement) {
                        loadingElement.classList.add("hidden");
                    }
                };

                // También ocultar si hay error
                img.onerror = () => {
                    imagesLoaded++;
                    if (imagesLoaded === totalImages && loadingElement) {
                        loadingElement.classList.add("hidden");
                    }
                };

                modalCarouselTrack.appendChild(img);
            });
            updateCarouselPosition();
        }
    }

    function updateCarouselPosition() {
        if (
            currentProjectImages.length > 0 &&
            modalCarouselTrack &&
            modalCarouselTrack.children[0]
        ) {
            const imageWidth = (modalCarouselTrack.children[0] as HTMLElement)
                .clientWidth;
            modalCarouselTrack.style.transform = `translateX(-${currentImageIndex * imageWidth}px)`;
        }
    }

    function nextImage() {
        currentImageIndex =
            (currentImageIndex + 1) % currentProjectImages.length;
        updateCarouselPosition();
    }

    function prevImage() {
        currentImageIndex =
            (currentImageIndex - 1 + currentProjectImages.length) %
            currentProjectImages.length;
        updateCarouselPosition();
    }

    projectCards.forEach((card) => {
        const btn = card.querySelector(".view-details-btn");
        if (btn) {
            btn.addEventListener("click", () => {
                const index = (card as HTMLElement).dataset.projectIndex;
                if (index) openModal(parseInt(index));
            });
        }
    });

    if (closeButton) {
        closeButton.addEventListener("click", () => {
            if (modal) modal.style.display = "none";
            document.body.style.overflow = "auto";
        });
    }

    window.addEventListener("click", (event) => {
        if (event.target == modal) {
            if (modal) modal.style.display = "none";
            document.body.style.overflow = "auto";
        }
    });

    if (carouselNextBtn) carouselNextBtn.addEventListener("click", nextImage);
    if (carouselPrevBtn) carouselPrevBtn.addEventListener("click", prevImage);

    // Ajustar posición del carrusel en redimensionamiento
    window.addEventListener("resize", updateCarouselPosition);
</script>
