---
// Define aquí la información clave
const profile = {
    title: "Misión: [Tu Objetivo Profesional]",
    intro: "Soy un desarrollador Full Stack con 5+ años de experiencia, especializado en construir aplicaciones robustas y escalables con tecnologías modernas.",
    main_text: "Mi enfoque se centra en la optimización del rendimiento y en la experiencia de usuario (UX). Utilizo Astro y GSAP para crear interfaces ultrarrápidas y altamente animadas. He trabajado en proyectos de E-commerce, Fintech y visualización de datos en tiempo real.",
    tech_focus: ["Astro", "GSAP", "React", "Node.js", "MongoDB", "TypeScript"]
};
---

<section id="about" class="about-section">
    <div class="container about-panel">
        <h2 class="section-title">Acerca de <span class="gradient-text">Mi</span></h2>
        
        <div class="content-grid">
            <div class="main-info">
                <h3>{profile.title}</h3>
                <p class="intro-text">{profile.intro}</p>
                <p>{profile.main_text}</p>
                
                <a href="/curriculum.pdf" download class="btn btn-download">
                    [ Descargar Archivo: CV.pdf ]
                </a>
            </div>

            <div class="data-focus">
                <h4>Foco Tecnológico Actual:</h4>
                <ul class="tech-list">
                    {profile.tech_focus.map(tech => (
                        <li><span class="indicator">»</span> {tech}</li>
                    ))}
                </ul>
            </div>
        </div>
    </div>
</section>

<style>
    .about-section {
        padding: 80px 0;
        position: relative;
        /* Fondo semitransparente para que la lluvia de código se vea ligeramente */
        background: rgba(10, 10, 10, 0.75); 
        backdrop-filter: blur(5px);
        border-top: 1px solid rgba(0, 243, 255, 0.1);
        border-bottom: 1px solid rgba(0, 243, 255, 0.1);
    }

    .about-panel {
        max-width: 1000px;
        /* Estilo de "caja flotante" */
        border: 1px solid var(--secondary);
        padding: 40px;
        border-radius: 8px;
        box-shadow: 0 0 30px rgba(188, 19, 254, 0.15);
    }

    .section-title {
        font-size: 2.5rem;
        text-align: center;
        margin-bottom: 40px;
    }

    .content-grid {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: 40px;
    }
    
    .main-info h3 {
        color: var(--accent);
        margin-bottom: 15px;
        font-size: 1.5rem;
    }
    
    .intro-text {
        font-size: 1.1rem;
        margin-bottom: 20px;
        color: #ddd;
    }

    .data-focus {
        background: rgba(0, 243, 255, 0.05);
        padding: 20px;
        border-left: 2px solid var(--accent);
    }
    
    .data-focus h4 {
        font-family: var(--font-heading);
        color: var(--secondary);
        margin-bottom: 15px;
    }

    .tech-list {
        list-style: none;
        padding-left: 0;
    }

    .tech-list li {
        margin-bottom: 8px;
        font-family: var(--font-body);
    }

    .indicator {
        color: var(--accent);
        margin-right: 5px;
    }
    
    /* Estilo para el botón de descarga, similar a un comando */
    .btn-download {
        display: inline-block;
        margin-top: 30px;
        padding: 10px 20px;
        background: var(--secondary);
        color: #000;
        font-family: var(--font-heading);
        text-decoration: none;
        font-weight: bold;
        transition: 0.3s;
        /* Borde glitch */
        border: 2px solid var(--secondary);
    }

    .btn-download:hover {
        background: transparent;
        color: var(--secondary);
        box-shadow: 0 0 20px var(--secondary);
    }
    
    @media (max-width: 768px) {
        .content-grid {
            grid-template-columns: 1fr;
        }
    }
</style>